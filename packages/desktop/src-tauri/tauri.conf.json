{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "windows": [
      {
        "title": "Dashtext",
        "width": 800,
        "height": 600,
        "decorations": false,
        "visible": false,
        "backgroundColor": "#222436"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "identifier": "app.dashtext",
  "plugins": {
    "sql": {
      "preload": ["sqlite:dashtext.db"]
    }
  },
  "productName": "dashtext",
  "version": "0.3.0"
}
