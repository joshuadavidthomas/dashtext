{
  "name": "dashtext",
  "version": "0.3.0",
  "description": "A text editor for quick capture",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "dev:web": "BUILD_TARGET=web vite dev",
    "build": "vite build",
    "build:web": "BUILD_TARGET=web vite build",
    "preview": "vite preview",
    "preview:web": "BUILD_TARGET=web vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "tauri",
    "screenshots": "playwright test --project=screenshots",
    "deploy:web": "BUILD_TARGET=web vite build && wrangler deploy"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.8",
    "@lezer/highlight": "^1.2.3",
    "@lucide/svelte": "^0.555.0",
    "@replit/codemirror-vim": "^6.3.0",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "@tauri-apps/plugin-sql": "^2.3.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.7",
    "runed": "^0.37.0",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tw-animate-css": "^1.4.0",
    "idb": "^8.0.3"
  },
  "devDependencies": {
    "@internationalized/date": "^3.10.0",
    "@playwright/test": "^1.49.1",
    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "@sveltejs/adapter-static": "^3.0.10",
    "wrangler": "^4.22.0",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@tauri-apps/cli": "^2.9.5",
    "@types/node": "^24.10.1",
    "bits-ui": "^2.14.4",
    "drizzle-kit": "^0.31.7",
    "svelte": "^5.45.3",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "typescript-svelte-plugin": "^0.3.50",
    "vite": "^7.2.6"
  }
}
